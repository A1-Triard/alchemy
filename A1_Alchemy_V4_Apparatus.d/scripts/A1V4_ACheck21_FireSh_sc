    set AddPotion to 0
    
    if ( player->GetItemCount p_fire_shield_b_A1_8 >= 8 )
    	player->AddItem p_fire_shield_b, 1
    	player->RemoveItem p_fire_shield_b_A1_8, 8
    endif
    if ( player->GetItemCount p_fire_shield_c_A1_8 >= 8 )
    	player->AddItem p_fire_shield_c, 1
    	player->RemoveItem p_fire_shield_c_A1_8, 8
    endif
