    short in1
    short in2
    short in3
    short in4
    short in5
    short sum45
    short sum60
    short temp
    short bad
    
    if ( AddPotion == 1 )
    	if ( A1V4_PotionB == 1 )
    		player->AddItem p_fire_shield_b_A1_8, 1
    	elseif ( A1V4_PotionB == 2 )
