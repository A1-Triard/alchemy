SCPT
SCTX
    Begin A1V4_AAdd33_FrostResist_sc
    
    short in1
    short in2
    short in3
    short in4
    short in5
    short in6
    short in7
    short in8
    short sum
    short temp
    short state
    
    short PCSkipEquip
    short OnPCEquip
    
    set PCSkipEquip to 1
    
    if ( state == 2 )
    	set A1V4_ACheck33_FrostResist_sc.AddPotion to 1
    	StartScript A1V4_AlchemyCheck_sc
    	set state to 0
    	return
    endif
    
    if ( state == 1 )
    	if ( ScriptRunning A1V4_CalcAlchemy5_sc == 0 )
    		set state to 2
    	endif
    	return
    endif
    
    if ( OnPCEquip == 1 )
    set OnPCEquip to 0
    
    set in1 to 0
    set in2 to 0
    set in3 to 0
    set in4 to 0
    set in5 to 0
    set in6 to 0
    set in7 to 0
    set in8 to 0
    
    if ( player->GetItemCount ingred_eyeball > 0 )
    	set in1 to 1
    endif
    if ( player->GetItemCount ingred_gravetar_01 > 0 )
    	set in2 to 1
    endif
    if ( player->GetItemCount ingred_fire_salts_01 > 0 )
    	set in3 to 1
    endif
    if ( player->GetItemCount ingred_eyeball_unique > 0 )
    	set in4 to 1
    endif
    if ( player->GetItemCount ingred_raw_Stalhrim_01 > 0 )
    	set in5 to 1
    endif
    if ( player->GetItemCount ingred_black_lichen_01 > 0 )
    	set in6 to 1
    endif
    if ( player->GetItemCount ingred_boar_leather > 0 )
    	set in7 to 1
    endif
    if ( player->GetItemCount ingred_holly_01 > 0 )
    	set in8 to 1
    endif
    
    set sum to ( in1 + in2 + in4 )
    set sum to ( sum + in5 + in8 )
    set sum to ( sum + in6 )
    set sum to ( sum + in3 + in7 )
    set temp to ( in1 + in4 )
    if ( temp > 1 )
    	set sum to 0
    endif
    set temp to ( in2 + in3 )
    if ( temp > 1 )
    	set sum to 0
    endif
    set temp to ( in5 + in7 )
    if ( temp > 1 )
    	set sum to 0
    endif
    set temp to ( in5 + in8 )
    if ( temp > 1 )
    	set sum to 0
    endif
    set temp to ( in7 + in8 )
    if ( temp > 1 )
    	set sum to 0
    endif
    if ( sum > 1 )
    	if ( in1 > 0 )
    		player->RemoveItem ingred_eyeball, 1
    	endif
    	if ( in2 > 0 )
    		player->RemoveItem ingred_gravetar_01, 1
    	endif
    	if ( in3 > 0 )
    		player->RemoveItem ingred_fire_salts_01, 1
    	endif
    	if ( in4 > 0 )
    		player->RemoveItem ingred_eyeball_unique, 1
    	endif
    	if ( in5 > 0 )
    		player->RemoveItem ingred_raw_Stalhrim_01, 1
    	endif
    	if ( in6 > 0 )
    		player->RemoveItem ingred_black_lichen_01, 1
    	endif
    	if ( in7 > 0 )
    		player->RemoveItem ingred_boar_leather, 1
    	endif
    	if ( in8 > 0 )
    		player->RemoveItem ingred_holly_01, 1
    	endif
    	set state to 1
    	set A1V4_CalcAlchemy5_sc.in to sum
    	set A1V4_CalcAlchemy5 to 1
    else
    	StartScript A1V4_AlchemyCheck_sc
    endif
    
    endif
    
    End
