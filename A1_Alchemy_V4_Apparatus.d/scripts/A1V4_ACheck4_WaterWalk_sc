    	elseif ( A1V4_PotionB == 7 )
    		player->AddItem p_water_walking_b_A1_8, 7
    	elseif ( A1V4_PotionB == 8 )
    		player->AddItem p_water_walking_b_A1_8, 8
    	endif
    	if ( A1V4_PotionC == 1 )
    		player->AddItem p_water_walking_c_A1_8, 1
    	elseif ( A1V4_PotionC == 2 )
    		player->AddItem p_water_walking_c_A1_8, 2
    	elseif ( A1V4_PotionC == 3 )
