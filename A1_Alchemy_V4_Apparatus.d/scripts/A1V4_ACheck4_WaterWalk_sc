SCPT
SCTX
    Begin A1V4_ACheck4_WaterWalk_sc
    
    short AddPotion
    short in1
    short in2
    short in3
    short in4
    short sum15
    short sum30
    short sum45
    short temp
    short bad
    
    if ( AddPotion == 1 )
    	if ( A1V4_PotionB == 1 )
    		player->AddItem p_water_walking_b_A1_8, 1
    	elseif ( A1V4_PotionB == 2 )
    		player->AddItem p_water_walking_b_A1_8, 2
    	elseif ( A1V4_PotionB == 3 )
    		player->AddItem p_water_walking_b_A1_8, 3
    	elseif ( A1V4_PotionB == 4 )
    		player->AddItem p_water_walking_b_A1_8, 4
    	elseif ( A1V4_PotionB == 5 )
