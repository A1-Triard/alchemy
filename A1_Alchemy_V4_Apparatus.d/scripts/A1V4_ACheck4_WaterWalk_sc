    	player->AddItem p_water_walking_e_A1, 1
    	player->RemoveItem p_water_walking_e_A1_8, 8
    endif
    
    set in1 to 0
    set in2 to 0
    set in3 to 0
    set in4 to 0
    
    if ( player->GetItemCount ingred_bc_ampoule_pod > 0 )
    	set in1 to 1
    endif
    if ( player->GetItemCount ingred_coprinus_01 > 0 )
    	set in2 to 1
    endif
    if ( player->GetItemCount ingred_kwama_cuttle_01 > 0 )
    	set in3 to 1
    endif
    if ( player->GetItemCount ingred_scales_01 > 0 )
    	set in4 to 1
    endif
    
    set sum15 to ( in1 + in2 )
    set sum30 to ( sum15 + in4 )
    set sum45 to ( sum30 + in3 )
    set bad to 0
    set temp to ( in2 + in3 )
    if ( temp > 1 )
    	set bad to 1
    endif
    if ( player->GetItemCount A1V4_L15_water_walking == 1 )
    	player->RemoveItem A1V4_L15_water_walking, 1
    elseif ( player->GetItemCount A1V4_L30_water_walking == 1 )
    	player->RemoveItem A1V4_L30_water_walking, 1
    elseif ( player->GetItemCount A1V4_L45_water_walking == 1 )
    	player->RemoveItem A1V4_L45_water_walking, 1
    endif
    if ( bad == 0 )
    	if ( sum15 > 1 )
    		player->AddItem A1V4_L15_water_walking, 1
    	elseif ( sum30 > 1 )
    		player->AddItem A1V4_L30_water_walking, 1
    	elseif ( sum45 > 1 )
    		player->AddItem A1V4_L45_water_walking, 1
    	endif
    endif
    
    StopScript A1V4_ACheck4_WaterWalk_sc
    StartScript A1V4_ACheck5_WaterBrf_sc
    
    End
