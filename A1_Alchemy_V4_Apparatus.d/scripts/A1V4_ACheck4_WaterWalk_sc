    	elseif ( A1V4_PotionE == 8 )
    		player->AddItem p_water_walking_e_A1_8, 8
    	endif
    endif
    
    set AddPotion to 0
    
    if ( player->GetItemCount p_water_walking_b_A1_8 >= 8 )
    	player->AddItem p_water_walking_b_A1, 1
    	player->RemoveItem p_water_walking_b_A1_8, 8
    endif
    if ( player->GetItemCount p_water_walking_c_A1_8 >= 8 )
    	player->AddItem p_water_walking_c_A1, 1
    	player->RemoveItem p_water_walking_c_A1_8, 8
    endif
    if ( player->GetItemCount p_water_walking_s_A1_8 >= 8 )
