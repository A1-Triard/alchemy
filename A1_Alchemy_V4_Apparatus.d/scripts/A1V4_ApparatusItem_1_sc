SCTX
    Begin A1V4_ApparatusItem_1_sc
    
    short OnPCDrop
    
    if ( GetDisabled == 1 )
    	SetDelete 1
    	return
    endif
    
    if ( OnPCDrop == 1 )
    	set OnPCDrop to 0
    	set A1V4_ApparatusX to GetPos X
    	set A1V4_ApparatusY to GetPos Y
    	set A1V4_ApparatusZ to GetPos Z
    	set A1V4_ApparatusAngle to ( player -> GetAngle Z )
    	PlaceAtPC "A1V4_ApparatusCont_1" 1, 50, 0
    	Disable
    endif
    
    End
