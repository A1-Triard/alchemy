    	elseif ( A1V4_PotionE == 7 )
    		player->AddItem p_reflection_e_A1_8, 7
    	elseif ( A1V4_PotionE == 8 )
    		player->AddItem p_reflection_e_A1_8, 8
    	endif
    endif
    
    set AddPotion to 0
    
    if ( player->GetItemCount p_reflection_b_A1_8 >= 8 )
    	player->AddItem p_reflection_b, 1
    	player->RemoveItem p_reflection_b_A1_8, 8
    endif
    if ( player->GetItemCount p_reflection_c_A1_8 >= 8 )
    	player->AddItem p_reflection_c, 1
    	player->RemoveItem p_reflection_c_A1_8, 8
    endif
    if ( player->GetItemCount p_reflection_s_A1_8 >= 8 )
    	player->AddItem p_reflection_s, 1
    	player->RemoveItem p_reflection_s_A1_8, 8
    endif
    if ( player->GetItemCount p_reflection_q_A1_8 >= 8 )
    	player->AddItem p_reflection_q, 1
    	player->RemoveItem p_reflection_q_A1_8, 8
    endif
    if ( player->GetItemCount p_reflection_e_A1_8 >= 8 )
    	player->AddItem p_reflection_e, 1
    	player->RemoveItem p_reflection_e_A1_8, 8
    endif
    
    set in1 to 0
    set in2 to 0
    set in3 to 0
    set in4 to 0
    
    if ( player->GetItemCount ingred_adamantium_ore_01 > 0 )
    	set in1 to 1
    endif
    if ( player->GetItemCount ingred_diamond_01 > 0 )
    	set in2 to 1
    endif
    if ( player->GetItemCount ingred_comberry_01 > 0 )
    	set in3 to 1
    endif
    if ( player->GetItemCount ingred_hound_meat_01 > 0 )
    	set in4 to 1
    endif
    
    set sum45 to ( in2 + in4 )
    set sum60 to ( sum45 + in1 + in3 )
    set bad to 0
    if ( player->GetItemCount A1V4_L45_reflection == 1 )
    	player->RemoveItem A1V4_L45_reflection, 1
    elseif ( player->GetItemCount A1V4_L60_reflection == 1 )
    	player->RemoveItem A1V4_L60_reflection, 1
    endif
    if ( bad == 0 )
    	if ( sum45 > 1 )
    		player->AddItem A1V4_L45_reflection, 1
    	elseif ( sum60 > 1 )
    		player->AddItem A1V4_L60_reflection, 1
    	endif
    endif
    
    StopScript A1V4_ACheck39_Reflect_sc
    StartScript A1V4_ACheck40_RestoreAgility_sc
    
    End
