SCTX
    Begin A1V4_ACheck39_Reflect_sc
    
    short AddPotion
    short in1
    short in2
    short in3
    short in4
    short sum45
    short sum60
    short temp
    short bad
    
    if ( AddPotion == 1 )
    	if ( A1V4_PotionB == 1 )
    		player->AddItem p_reflection_b_A1_8, 1
    	elseif ( A1V4_PotionB == 2 )
    		player->AddItem p_reflection_b_A1_8, 2
    	elseif ( A1V4_PotionB == 3 )
    		player->AddItem p_reflection_b_A1_8, 3
    	elseif ( A1V4_PotionB == 4 )
    		player->AddItem p_reflection_b_A1_8, 4
    	elseif ( A1V4_PotionB == 5 )
    		player->AddItem p_reflection_b_A1_8, 5
    	elseif ( A1V4_PotionB == 6 )
    		player->AddItem p_reflection_b_A1_8, 6
    	elseif ( A1V4_PotionB == 7 )
    		player->AddItem p_reflection_b_A1_8, 7
    	elseif ( A1V4_PotionB == 8 )
    		player->AddItem p_reflection_b_A1_8, 8
    	endif
    	if ( A1V4_PotionC == 1 )
    		player->AddItem p_reflection_c_A1_8, 1
    	elseif ( A1V4_PotionC == 2 )
    		player->AddItem p_reflection_c_A1_8, 2
    	elseif ( A1V4_PotionC == 3 )
    		player->AddItem p_reflection_c_A1_8, 3
    	elseif ( A1V4_PotionC == 4 )
