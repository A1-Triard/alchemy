    	elseif ( A1V4_PotionQ == 8 )
    		player->AddItem p_reflection_q_A1_8, 8
    	endif
    	if ( A1V4_PotionE == 1 )
    		player->AddItem p_reflection_e_A1_8, 1
    	elseif ( A1V4_PotionE == 2 )
    		player->AddItem p_reflection_e_A1_8, 2
    	elseif ( A1V4_PotionE == 3 )
    		player->AddItem p_reflection_e_A1_8, 3
    	elseif ( A1V4_PotionE == 4 )
