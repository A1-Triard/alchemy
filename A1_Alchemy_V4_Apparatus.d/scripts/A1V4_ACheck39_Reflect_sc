    	elseif ( A1V4_PotionC == 6 )
    		player->AddItem p_reflection_c_A1_8, 6
    	elseif ( A1V4_PotionC == 7 )
    		player->AddItem p_reflection_c_A1_8, 7
    	elseif ( A1V4_PotionC == 8 )
    		player->AddItem p_reflection_c_A1_8, 8
    	endif
    	if ( A1V4_PotionS == 1 )
    		player->AddItem p_reflection_s_A1_8, 1
    	elseif ( A1V4_PotionS == 2 )
    		player->AddItem p_reflection_s_A1_8, 2
    	elseif ( A1V4_PotionS == 3 )
    		player->AddItem p_reflection_s_A1_8, 3
    	elseif ( A1V4_PotionS == 4 )
    		player->AddItem p_reflection_s_A1_8, 4
    	elseif ( A1V4_PotionS == 5 )
    		player->AddItem p_reflection_s_A1_8, 5
    	elseif ( A1V4_PotionS == 6 )
    		player->AddItem p_reflection_s_A1_8, 6
    	elseif ( A1V4_PotionS == 7 )
    		player->AddItem p_reflection_s_A1_8, 7
    	elseif ( A1V4_PotionS == 8 )
    		player->AddItem p_reflection_s_A1_8, 8
    	endif
    	if ( A1V4_PotionQ == 1 )
    		player->AddItem p_reflection_q_A1_8, 1
    	elseif ( A1V4_PotionQ == 2 )
    		player->AddItem p_reflection_q_A1_8, 2
    	elseif ( A1V4_PotionQ == 3 )
    		player->AddItem p_reflection_q_A1_8, 3
    	elseif ( A1V4_PotionQ == 4 )
