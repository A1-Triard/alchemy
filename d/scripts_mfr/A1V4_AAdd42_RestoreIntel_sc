SCTX
    Begin A1V4_AAdd42_RestoreIntel_sc
    
    short in1
    short in2
    short in3
    short in4
    short in5
    short in6
    short sum
    short temp
    short state
    
    short PCSkipEquip
    short OnPCEquip
    
    set PCSkipEquip to 1
    
    if ( state == 2 )
    	set A1V4_ACheck42_RestoreIntel_sc.AddPotion to 1
    	StartScript A1V4_AlchemyCheck_sc
    	set state to 0
    	return
    endif
    
    if ( state == 1 )
    	if ( ScriptRunning A1V4_CalcAlchemy5_sc == 0 )
    		set state to 2
    	endif
    	return
    endif
    
    if ( OnPCEquip == 1 )
    set OnPCEquip to 0
    
    set in1 to 0
    set in2 to 0
    set in3 to 0
    set in4 to 0
    set in5 to 0
    set in6 to 0
    
    if ( player->GetItemCount "al_i_oriharukon_ore" > 0 )
    	set in1 to 1
    endif
    if ( player->GetItemCount "ingred_bittergreen_petals_01" > 0 )
    	set in2 to 1
    endif
    if ( player->GetItemCount "ingred_ruby_01" > 0 )
    	set in3 to 1
    endif
    if ( player->GetItemCount "ingred_scrap_metal_01" > 0 )
    	set in4 to 1
    endif
    if ( player->GetItemCount "ingred_treated_bittergreen_uniq" > 0 )
    	set in5 to 1
    endif
    if ( player->GetItemCount "ingred_wolfsbane_01" > 0 )
    	set in6 to 1
    endif
    
    set sum to ( in1 + in2 )
    set sum to ( sum + in3 )
    set sum to ( sum + in4 )
    set sum to ( sum + in5 )
    set sum to ( sum + in6 )
    set temp to ( in2 + in5 )
    if ( temp > 1 )
    	set sum to 0
    endif
    set temp to ( in2 + in6 )
    if ( temp > 1 )
    	set sum to 0
    endif
    set temp to ( in3 + in4 )
    if ( temp > 1 )
    	set sum to 0
    endif
    set temp to ( in5 + in6 )
    if ( temp > 1 )
    	set sum to 0
    endif
    if ( sum > 1 )
    	if ( in1 > 0 )
    		player->RemoveItem "al_i_oriharukon_ore", 1
    	endif
    	if ( in2 > 0 )
    		player->RemoveItem "ingred_bittergreen_petals_01", 1
    	endif
    	if ( in3 > 0 )
    		player->RemoveItem "ingred_ruby_01", 1
    	endif
    	if ( in4 > 0 )
    		player->RemoveItem "ingred_scrap_metal_01", 1
    	endif
    	if ( in5 > 0 )
    		player->RemoveItem "ingred_treated_bittergreen_uniq", 1
    	endif
    	if ( in6 > 0 )
    		player->RemoveItem "ingred_wolfsbane_01", 1
    	endif
    	set state to 1
    	set A1V4_CalcAlchemy5_sc.in to sum
    	set A1V4_CalcAlchemy5 to 1
    else
    	StartScript A1V4_AlchemyCheck_sc
    endif
    
    endif
    
    End
