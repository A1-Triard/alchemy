SCTX
    Begin A1V4_AAdd29_FortPers_sc
    
    short in1
    short in2
    short in3
    short in4
    short sum
    short temp
    short state
    
    short PCSkipEquip
    short OnPCEquip
    
    set PCSkipEquip to 1
    
    if ( state == 2 )
    	set A1V4_ACheck29_FortPers_sc.AddPotion to 1
    	StartScript A1V4_AlchemyCheck_sc
    	set state to 0
    	return
    endif
    
    if ( state == 1 )
    	if ( ScriptRunning A1V4_CalcAlchemy5_sc == 0 )
    		set state to 2
    	endif
    	return
    endif
    
    if ( OnPCEquip == 1 )
    set OnPCEquip to 0
    
    set in1 to 0
    set in2 to 0
    set in3 to 0
    set in4 to 0
    
    if ( player->GetItemCount "al_i_scamp_ear" > 0 )
    	set in1 to 1
    endif
    if ( player->GetItemCount "ingred_green_lichen_01" > 0 )
    	set in2 to 1
    endif
    if ( player->GetItemCount "ingred_kresh_fiber_01" > 0 )
    	set in3 to 1
    endif
    if ( player->GetItemCount "ingred_stoneflower_petals_01" > 0 )
    	set in4 to 1
    endif
    
    set sum to ( in1 + in2 )
    set sum to ( sum + in3 )
    set sum to ( sum + in4 )
    if ( sum > 1 )
    	if ( in1 > 0 )
    		player->RemoveItem "al_i_scamp_ear", 1
    	endif
    	if ( in2 > 0 )
    		player->RemoveItem "ingred_green_lichen_01", 1
    	endif
    	if ( in3 > 0 )
    		player->RemoveItem "ingred_kresh_fiber_01", 1
    	endif
    	if ( in4 > 0 )
    		player->RemoveItem "ingred_stoneflower_petals_01", 1
    	endif
    	set state to 1
    	set A1V4_CalcAlchemy5_sc.in to sum
    	set A1V4_CalcAlchemy5 to 1
    else
    	StartScript A1V4_AlchemyCheck_sc
    endif
    
    endif
    
    End
