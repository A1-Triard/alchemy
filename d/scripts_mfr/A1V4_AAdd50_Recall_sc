SCTX
    Begin A1V4_AAdd50_Recall_sc
    
    short in1
    short in2
    short sum
    short temp
    short state
    
    short PCSkipEquip
    short OnPCEquip
    
    set PCSkipEquip to 1
    
    if ( state == 2 )
    	set A1V4_ACheck50_Recall_sc.AddPotion to 1
    	StartScript A1V4_AlchemyCheck_sc
    	set state to 0
    	return
    endif
    
    if ( state == 1 )
    	if ( ScriptRunning A1V4_CalcAlchemy2_sc == 0 )
    		set state to 2
    	endif
    	return
    endif
    
    if ( OnPCEquip == 1 )
    set OnPCEquip to 0
    
    set in1 to 0
    set in2 to 0
    
    if ( player->GetItemCount "al_i_quicksilver_bottle" > 0 )
    	set in1 to 1
    endif
    if ( player->GetItemCount "ingred_boar_leather" > 0 )
    	set in2 to 1
    endif
    
    set sum to ( in1 + in2 )
    if ( sum > 1 )
    	if ( in1 > 0 )
    		player->RemoveItem "al_i_quicksilver_bottle", 1
    	endif
    	if ( in2 > 0 )
    		player->RemoveItem "ingred_boar_leather", 1
    	endif
    	set state to 1
    	set A1V4_CalcAlchemy2_sc.in to sum
    	set A1V4_CalcAlchemy2 to 1
    else
    	StartScript A1V4_AlchemyCheck_sc
    endif
    
    endif
    
    End
