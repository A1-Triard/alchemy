    	elseif ( A1V4_PotionE == 8 )
    		player->AddItem p_dispel_e_A1_8, 8
    	endif
    endif
    
    set AddPotion to 0
    
    if ( player->GetItemCount p_dispel_b_A1_8 >= 8 )
    	player->AddItem p_dispel_b_A1, 1
    	player->RemoveItem p_dispel_b_A1_8, 8
    endif
    if ( player->GetItemCount p_dispel_c_A1_8 >= 8 )
    	player->AddItem p_dispel_c_A1, 1
    	player->RemoveItem p_dispel_c_A1_8, 8
    endif
    if ( player->GetItemCount p_dispel_s_A1_8 >= 8 )
    	player->AddItem p_dispel_s, 1
    	player->RemoveItem p_dispel_s_A1_8, 8
