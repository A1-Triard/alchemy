    	player->AddItem p_dispel_e_A1, 1
    	player->RemoveItem p_dispel_e_A1_8, 8
    endif
    
    set in1 to 0
    set in2 to 0
    set in3 to 0
    set in4 to 0
    
    if ( player->GetItemCount "ingred_bc_bungler's_bane" > 0 )
    	set in1 to 1
    endif
    if ( player->GetItemCount "ingred_moon_sugar_01" > 0 )
    	set in2 to 1
    endif
    if ( player->GetItemCount "ingred_pearl_01" > 0 )
    	set in3 to 1
    endif
    if ( player->GetItemCount "Ingred_timsa-come-by_01" > 0 )
    	set in4 to 1
    endif
    
    set sum15 to 0
    set sum15 to ( sum15 + in4 )
    set sum30 to sum15
    set sum30 to ( sum30 + in2 )
    set sum30 to ( sum30 + in3 )
    set sum45 to sum30
    set sum45 to ( sum45 + in1 )
    set temp to ( in1 + in2 )
    if ( temp > 1 )
    	set bad to 1
    endif
    if ( player->GetItemCount "A1V4_L15_dispel" == 1 )
    	player->RemoveItem "A1V4_L15_dispel", 1
    elseif ( player->GetItemCount "A1V4_L30_dispel" == 1 )
    	player->RemoveItem "A1V4_L30_dispel", 1
    elseif ( player->GetItemCount "A1V4_L45_dispel" == 1 )
    	player->RemoveItem "A1V4_L45_dispel", 1
    endif
    if ( bad == 0 )
    	if ( sum15 > 1 )
    		player->AddItem "A1V4_L15_dispel", 1
    	elseif ( sum30 > 1 )
    		player->AddItem "A1V4_L30_dispel", 1
    	elseif ( sum45 > 1 )
    		player->AddItem "A1V4_L45_dispel", 1
    	endif
    endif
    
    StopScript A1V4_ACheck20_Dispel_sc
    StartScript A1V4_ACheck21_FireSh_sc
    
    End
