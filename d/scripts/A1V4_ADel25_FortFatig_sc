SCTX
    Begin A1V4_ADel25_FortFatig_sc
    
    if ( player->GetItemCount "A1V4_L30_fortify_fatigue" == 1 )
    	player->RemoveItem "A1V4_L30_fortify_fatigue", 1
    elseif ( player->GetItemCount "A1V4_L45_fortify_fatigue" == 1 )
    	player->RemoveItem "A1V4_L45_fortify_fatigue", 1
    endif
    
    StopScript A1V4_ADel25_FortFatig_sc
    StartScript A1V4_ADel26_FortHealth_sc
    
    End
