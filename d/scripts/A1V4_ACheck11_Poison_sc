    elseif ( player->GetItemCount A1V4_L60_cure_poison == 1 )
    	player->RemoveItem A1V4_L60_cure_poison, 1
    endif
    if ( bad == 0 )
    	if ( sum30 > 1 )
    		player->AddItem A1V4_L30_cure_poison, 1
    	elseif ( sum45 > 1 )
    		player->AddItem A1V4_L45_cure_poison, 1
    	elseif ( sum60 > 1 )
